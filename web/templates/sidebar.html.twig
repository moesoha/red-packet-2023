<div class="fb-box">
	<p style="font-weight: bold;">{{ app.user.username }}，您好！</p>
	<p style="font-size: .875em; text-align: right;"><a href="{{ path('auth.logout') }}">退出登录</a></p>
	<p style="font-size: .75em;">现在是北京时间<br />{{ 'now'|date('Y-m-d H:i:s') }}。</p>
</div>
<div class="fb-box">
	<p style="text-align: center; margin-top: 0; font-size: 1.125em; font-weight: bold;">通知新闻</p>
	<ul style="padding-left: 1em;">
		{% for news in getLatestNews() %}
		<li><a href="{{ path('news.show', {'id': news.id}) }}">{{ news.title }}</a></li>
		{% endfor %}
	</ul>
</div>
